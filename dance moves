#include <iostream>
#include <stdio.h>

using namespace std;

int main()
{
    int n,a,b,sum,x;
    cin >> n;
    
    for(int i=0;i<n;i++)
    {
        x=0;
        sum=0;
        cin >> a >> b;
       while(a!=b)
       {
           if(a<b)
           {
               a=a+2;
               sum++;
           }
           if(a>b)
           {
               a=a-1;
               sum++;
           }
       }
           cout << sum << endl;
    }

    return 0;
}
